<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.MainPage">
    <StackLayout Margin="10,35,10,10">
        
        <Editor x:Name="txtBillAmount"
                Text=""
                Placeholder="Enter your bill amount"
                HeightRequest="100" />
        <Editor x:Name="txtTipRate"
                Text=""
                Placeholder="Enter your Tip Rate"
                HeightRequest="100" />
        
        <Button Text="Calculate"
                    Clicked="OnCalculateButtonClicked" />
        <Label x:Name="tipAmount"
               Text="Tip Amount"
               HorizontalOptions="Center"
               FontAttributes="Bold" />
        <Label x:Name="totalBill" 
               Text="Total Bill"
               HorizontalOptions="Center"
               FontAttributes="Bold" />
    </StackLayout>
</ContentPage>
